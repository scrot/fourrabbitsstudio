{{define "main"}}
    {{template "newsletter"}}
{{end}}

{{define "newsletter"}}
<div class="size-full flex items-center justify-center px-12">
  <div class="flex flex-row rounded-xl max-w-[48rem] bg-lighter-bg bg-clip-border text-gray-700 shadow-md">
    <div class="sm:min-w-56 flex items-center justify-center">
        <img class="hidden sm:block pl-8 object-cover drop-shadow-md" src="/assets/logo.svg" alt="logo">
    </div>
    <div class="p-8">
      <h6 class="mb-4 block font-sans text-base font-semibold uppercase leading-relaxed tracking-normal text-primary-txt antialiased">
        Newsletter
      </h6>
      <h4 class="mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal text-darker-txt antialiased">
       Receive updates on our new digital products! 
      </h4>
      <p class="mb-8 block font-sans text-base font-normal leading-relaxed text-dark-txt antialiased">
        We are working daily on our hand-crafted products. Would you like to receive updates of our new stickers, notebooks, and journals.
      </p>
      <form hx-post="/subscribe" hx-swap="outerHTML" hx-target="this">
        <div class="flex flex-row gap-4">
          <input class="grow h-12 rounded-lg border border-dark-br outline-none indent-4 shadow-sm focus:border-primary-br"  type="text" name="email" placeholder="Your email" />
          <button class="px-2 h-12 rounded-lg bg-primary-btn text-pink-50 shadow-sm hover:bg-dark-primary-btn" type="submit">Subscribe</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{end}}

