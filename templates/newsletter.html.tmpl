{{define "newsletter"}}
<div class="max-w-[48rem] bg-stone-50 flex items-center justify-center">
  <div class="flex flex-row rounded-xl bg-clip-border text-gray-700 shadow-md">
    <div class="flex items-center justify-center">
        <img class="sm:block hidden object-cover px-8 drop-shadow-md" src="/assets/logo.svg" alt="logo">
    </div>
    <div class="p-8">
      <h6 class="mb-4 block font-sans text-base font-semibold uppercase leading-relaxed tracking-normal text-pink-500 antialiased">
        Newsletter
      </h6>
      <h4 class="mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
       Receive updates on our new digital products! 
      </h4>
      <p class="mb-8 block font-sans text-base font-normal leading-relaxed text-gray-700 antialiased">
        We are working daily on our hand-crafted products. Would you like to receive updates of our new stickers, notebooks, and journals.
      </p>
      <form hx-post="/subscribe" hx-swap="outerHTML" hx-target="this">
        <div class="flex flex-row gap-4">
          <input class="grow h-12 rounded-lg border border-grey-500 outline-none indent-4 shadow-sm"  type="text" name="email" placeholder="Your email" />
          <button class="px-2 h-12 rounded-lg border border-pink-600 bg-pink-500 text-pink-50 shadow-sm hover:bg-pink-600" type="submit">Subscribe</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{end}}

